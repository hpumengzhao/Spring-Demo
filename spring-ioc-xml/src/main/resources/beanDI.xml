<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

<!--    基于set注入-->
    <bean id="book" class="org.codancer.bean.Book">
        <property name="author" value="codancer"></property>
        <property name="bname" value="c++"></property>
    </bean>
<!--    基于构造器注入-->
    <bean id="book2" class="org.codancer.bean.Book">
        <constructor-arg name="author" value="kangkang"> </constructor-arg>
        <constructor-arg name="bname" value="java"></constructor-arg>
    </bean>
</beans>